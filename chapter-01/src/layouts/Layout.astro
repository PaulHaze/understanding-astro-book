---
// import Footer from '@/components/Footer.astro';
import Footer from '@/components/Footer.astro';
import NavBar from '@/components/NavBar.astro';
import '@/styles/global.scss';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Code along to the Astro Book" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&family=Lemon&display=swap"
			rel="stylesheet"
		/>
		<title>{title}</title>
	</head>
	<body class="flex min-h-screen flex-col justify-between">
		<div class="main">
			<NavBar />
			<slot />
		</div>
		<Footer />
	</body>
</html>
